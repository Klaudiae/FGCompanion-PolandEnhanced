<?xml version="1.0" encoding="UTF-8" ?>
<PropertyList>
<path>tower_aeroklub.ac</path>
<animation>	
<type>range</type>
<min-m>0</min-m>
<max-m>25000</max-m>
</animation>
<!-- Autor: Mariusz Migut as SP-MMA
licencja: GPL -->

<animation>
<type>textranslate</type>
<object-name>tower</object-name>
<property>/sim/time/sun-angle-rad</property>
<step> 1.57 </step>
<factor>0.318471338</factor>
<center>
	<x-m> 0 </x-m>
	<y-m> 0 </y-m>
	<z-m> 0 </z-m>
</center>
<axis>
	<x>  0 </x>
	<y> -1 </y>
	<z>  0 </z>
</axis>
</animation>

<animation>
    <type>material</type>
    <object-name>tower</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>

</PropertyList>
