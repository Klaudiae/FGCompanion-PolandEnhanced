<?xml version="1.0"?>

<PropertyList>
	<path>EPSC_hangar.ac</path>

	<animation>
		<type>material</type>
		<object-name>Plane</object-name>
		<condition>
			<less-than-equals>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.63</value>
			</less-than-equals>
		</condition>
		<global type="bool">true</global>
		<emission>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</emission>
		<texture>EPSC_hangar.rgb</texture>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Plane</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.63</value>
			</greater-than>
		</condition>
		<global type="bool">true</global>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
		<texture>EPSC_hangar_n.rgb</texture>
	</animation>

<!-- ########################## LOD ######################### -->

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>10000</max-m>
	</animation>

</PropertyList>
