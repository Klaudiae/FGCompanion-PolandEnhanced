<PropertyList>
 <path>terminal-A-B.ac</path> 
 <animation>
  <type>noshadow</type>
  <object-name>napisy</object-name>
  <min-m>0</min-m> 
  <max-m>90000</max-m> 
  <use-personality type="bool">true</use-personality>
 </animation>
 <animation>
  <type>select</type>
  <object-name>napisy</object-name>
   <condition>
    <greater-than>
     <property>sim/time/sun-angle-rad</property>
     <value>1.57</value>
    </greater-than>
   </condition>
 </animation>
</PropertyList>