	<!-- REMBRAND light -->
	<animation>
		<type>light</type>
		<light-type>spot</light-type>
		<name>LightSource</name>
		<object-name>LightVolume</object-name>
		<position>
			<x>-1.154</x>
			<y> 0.000</y>
			<z>20.043</z>
		</position>
		<direction>
			<x>-10.000</x>
			<y>  0.000</y>
			<z>-20.000</z>
		</direction>
		<ambient>
			<r>0.5</r>
			<g>0.5</g>
			<b>0.5</b>
			<a>1.0</a>
		</ambient>
		<diffuse>
			<r>0.6</r>
			<g>0.505</g>
			<b>0.6</b>
			<a>1.0</a>
		</diffuse>
		<specular>
			<r>0.6</r>
			<g>0.6</g>
			<b>0.6</b>
			<a>1.0</a>
		</specular>
		<attenuation>
			<c>1.0</c>
			<l>0.0002</l>
			<q>0.00005</q>
		</attenuation>
		<exponent>3.0</exponent>
		<cutoff>100</cutoff>
		<near-m>3.5</near-m>
		<far-m>300</far-m>
	</animation>
	
	<animation>
	<type>select</type>
	<object-name>LightSource</object-name>
		<condition>
			<and>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.45</value>
			</greater-than>
			<property>/sim/rendering/rembrandt/enabled</property>
			<greater-than>
				<property>/sim/rendering/shaders/lights</property>
				<value>0.0</value>
			</greater-than>
			</and>
		</condition>
	</animation>
	
<!-- Obstruction lamp light model -->	
<model>
    <path>Models/Effects/pos_lamp_red_light_2st.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> 21.290 </z-m>
      <pitch-deg> 0.00</pitch-deg>
	  <heading-deg>0.0 </heading-deg>
    </offsets>
</model>


