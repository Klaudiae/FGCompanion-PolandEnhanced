<!-- Light bulb illu -->
	<animation>
	<type>material</type>
	<object-name>Bulb.001</object-name>
		<condition>
			<greater-than>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.45</value>
			</greater-than>
		</condition>
		<emission>
			<red>  1.0</red>
			<green>0.8</green>
			<blue> 0.1</blue>
		</emission>
	</animation>

	<animation>
	<type>material</type>
	<object-name>Bulb.001</object-name>
		<condition>
			<less-than-equals>
				<property>/sim/time/sun-angle-rad</property>
				<value>1.45</value>
			</less-than-equals>
		</condition>
		<emission>
			<red>  0.0</red>
			<green>0.0</green>
			<blue> 0.0</blue>
		</emission>
	</animation>

</PropertyList>
