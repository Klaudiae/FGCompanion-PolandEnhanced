<!-- 
     Wheel diameter about 0.9 m
     factor(rpm) = (V(kt)*60)/(d*Pi) = V(kt)*21.22
     knots/ms=0.514
     -->
<!-- left wheel -->
<animation>
	<type>spin</type>
	<object-name>Left_koleso</object-name>
	<property>gear/gear[0]/rollspeed-ms</property>
	<factor>-10.92</factor>
	<axis>
		<x1-m>2.734</x1-m>
		<y1-m>-1.827</y1-m>
		<z1-m>-2.116</z1-m>
		
		
		<x2-m>2.734</x2-m>
		<y2-m>-1.577</y2-m>
		<z2-m>-2.075</z2-m>
