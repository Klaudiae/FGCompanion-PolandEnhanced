<?xml version="1.0" encoding="UTF-8" ?>
<PropertyList>
	
	<!-- LOWI R26 custom approach lights set - row of 5 static lights -->
	
	<path>LOWI_app_light_poles_low_static_set.ac</path>
	
	<!-- LOD for light housings -->
	<animation>
		<type>range</type>  
		<object-name>app_light_set_05</object-name>
		<object-name>app_light_set_box</object-name>
		<min-m>0</min-m>
		<max-m>8000</max-m>
	</animation>
	
	<!-- light model effects visible at night -->
	<model>
	<path>approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m>-2.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>
	
	<model>
	<path>approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m>-1.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>
	
	<model>
	<path>approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m> 0.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>
	
	<model>
	<path>approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m> 1.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>
	
	<model>
	<path>approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m> 2.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>

    <animation>
        <type>noshadow</type>
        <object-name>WhiteLight6000</object-name>
    </animation>

    <animation>
        <type>alpha-test</type>
		<object-name>WhiteLight6000</object-name>
        <alpha-factor>0.01</alpha-factor>
    </animation>
	
	<animation>
		<type>select</type>
		<object-name>WhiteLight6000</object-name>
			<condition>
				<or>
					<greater-than>
						<property>/sim/time/sun-angle-rad</property>
						<value>1.49</value>
					</greater-than>
					<less-than>
						<property>environment/visibility-m</property>
						<value>6000.00</value>
					</less-than>
				</or>
			</condition>
	</animation>
	
	<animation>
		<type>dist-scale</type>
		<object-name>WhiteLight6000</object-name>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>0.025</dep>
			</entry>
			<entry>
				<ind>300</ind>
				<dep>0.1</dep>
			</entry>
			<entry>
				<ind>1500</ind>
				<dep>0.3</dep>
			</entry>
			<entry>
				<ind>6000</ind>
				<dep>0.9</dep>
			</entry>
			<entry>
				<ind>20000</ind>
				<dep>1.3</dep>
			</entry>
		</interpolation>
	</animation>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>20000</max-m>
	</animation>
	
</PropertyList>
