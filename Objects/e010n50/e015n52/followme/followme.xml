<!-- DOOR ANIMATIONS -->

<!-- LEFT FRONT DOOR -->

<animation>
 <type>pick</type>
 <object-name>ldoor</object-name>
 <action>
  <button>0</button>
  <repeatable>false</repeatable>  
  <binding>
   <command>nasal</command>
   <script>followme.frontleft_door.toggle()</script>
  </binding>
 </action>
</animation>
 
<animation>
 <type>rotate</type>
